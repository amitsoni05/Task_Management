@model TaskManagementSystem.Web.Models.TaskViewModel

@{
    Layout = "_LoginLayout";
}

    <div class="main-wrapper">
      
       
    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(../../assets/images/big/auth-bg.jpg) no-repeat center center;">
            <div class="auth-box">
                <div>
                    <div class="logo">
                    <span class="db"><img src="~/assets/images/task-management-removebg-preview-Photoroom.png" alt="logo" height="100px" width="100px" style="border-radius:100%;"/></span>
                        <h5 class="font-medium mb-3">Recover Password</h5>
                    </div>
                    <!-- Form -->
                    <div class="row">
                        <div class="col-12">
                            <form class="form-horizontal mt-3" id="checkemail">
                                                         
                                <div class="form-group row">
                                <label for="email" class="col-sm-2 col-form-label" asp-for="@Model.HiteshTaskUserMasterModel.Email">Email</label>
                                    <div class="col-sm-10">
                                      
                                    <input type="email" class="form-control" id="emailaddress" asp-for="@Model.HiteshTaskUserMasterModel.Email" placeholder="Enter your email" required>
                                      
                                     </div>
                                   <span asp-validation-for="@Model.HiteshTaskUserMasterModel.Email" class="text-danger"></span>
                                </div>
                            <div class="form-group row">
                                <div class="col-sm-6 text-center">
                                    <button class="btn btn-block btn-lg btn-info" onclick="TaskManagementSystem.Account.CheckEmail()">RESET</button>
                                </div>
                                <div class="col-sm-6 text-center">
                                    <button type="button" class="btn btn-block btn-lg btn-secondary" onclick="window.history.back();">BACK</button>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>




@section Scripts {
    <script>
        $(document).ready(function () {
            $.validator.unobtrusive.parse($("#checkemail"));
        });
    </script>

}

