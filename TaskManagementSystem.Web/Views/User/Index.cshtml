@using TaskManagementSystem.Common.Utility
@model TaskManagementSystem.Web.Models.TaskViewModel;


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Project !!</h4>

        <div class="table-responsive">
            <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="zero_config_length">

                            <label>Search:<input type="search" id="txtSearch" class="form-control form-control-sm" placeholder="" aria-controls="zero_config"></label>
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="UProjectTable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="zero_config_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Title: activate to sort column descending" style="width: 0px;">Title</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Description: activate to sort column ascending" style="width: 0px;">Description</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Created On: activate to sort column ascending" style="width: 0px;">Created On</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Created By: activate to sort column ascending" style="width: 0px;">Created By</th>
                                  
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        // $(".tblscrollFixed").height($(".page-wrapper").height() - 80);
    TaskManagementSystem.User.Init({
            TableId: "UProjectTable",
            SearchId: "txtSearch",
        });


    });

    $("#txtSearch").on("keyup", function () {
    TaskManagementSystem.User.Search();
    });

    // $("#ddlSearch").on("keyup", function () {
